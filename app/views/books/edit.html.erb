<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="field">
	<%= f.label :title %>
	<%= f.text_field :title, class: "book_title" %>
</div>

<div class="field">
	<%= f.label :body %>
	<%= f.text_area :body, class: "book_body" %>
</div>

<div class="actions">
	<%= f.submit 'Update Book' %>
</div>

<% end %>
<%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %>
<%= '|' %>
<%= link_to "Back", books_path, class: "back" %>